{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "outDir": "./dist/main",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/main/**/*", "src/shared/**/*", "src/types/**/*"],
  "exclude": ["node_modules"]
}
